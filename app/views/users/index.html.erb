<p id="notice"><%= notice %></p>
<h2>Usuários</h2>

<table class='highlight'>
  <thead>
    <tr>
      <th>Email</th>
      <th>CNPJ</th>
      <th>Razão Social</th>
      <th>Nome Fantasia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.cnpj %></td>
        <td><%= user.social_name %></td>
        <td><%= user.fantasy_name %></td>
        <td><a href='<%=user_path(user)%>'><i class="material-icons left">list</i></a></td>
        <td><a href='<%=edit_user_path(user)%>'><i class="material-icons left">edit</i></a></td>
        <td><a data-confirm="Você tem certeza que deseja apagar <%= user.email%>?" data-method="delete" href='<%= user_path(user)%>' rel="nofollow"><i class="material-icons left">delete</i></a>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Novo Usuário', new_user_path, class: 'waves-effect waves-light btn' %>
